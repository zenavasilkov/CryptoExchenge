<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8"/>
    <title>@ViewBag.Title</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/trade.css" rel="stylesheet">   
    <link href="~/css/layout.css" rel="stylesheet"/>
    <link href="~/css/deposit.css" rel="stylesheet"/> 
    <link href="~/css/dashboard.css" rel="stylesheet"/> 
    <script src="~/js/register.js"></script>
    <script src="~/js/deposit.js"></script> 
    <script src="~/js/withdraw.js"></script>
    <script src="~/js/trade.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/cleave.js@1/dist/cleave.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="page-container">
    <header>
        <div class="container">
            <a href="/Home/Index"><img src="/img/Logo.PNG" alt="Логотип сайта" /></a>
        </div>
    </header>

    <main class="flex-fill">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)

    <div id="authModal" class="model-overlay" style="display: none;">
        <div class="modal-container">
            <div class="form-container-header">
                <img src="/img/Logo.PNG" alt="Логотип сайта" class="reg-logo"/>
                <button id="modalClose" class="modal-close">&times;</button>
            </div>
            <div id="modalContent" class="modal-content">
                @{
                    var authFormModel = new AccountFormViewModel
                    {
                        Login = new LoginViewModel(),
                        Register = new RegisterViewModel(),
                        ActiveTab = "login"
                    };
                }

                @await Html.PartialAsync("_AccountForm", authFormModel)
            </div>
        </div>
    </div>
     
    <div class="deposit-modal-overlay" id="depositModal">
        <div class="deposit-modal-container"> 
            <div id="depositFormWrapper">
                @await Html.PartialAsync("_DepositForm", new DepositViewModel())
            </div>
        </div>
    </div>

    <div class="deposit-modal-overlay" id="withdrawModal">
        <div class="deposit-modal-container">
            <div id="withdrawFormWrapper">
                @await Html.PartialAsync("_WithdrawForm", new WithdrawViewModel())
            </div>
        </div>
    </div>
    
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-logo col-md-5">
                    <img src="/img/Logo.PNG" alt="Логотип сайта" />
                    <p>Безопасная биржа криптовалют</p>
                </div>

                <div class="footer-links col-md-3">
                    <h4>О платформе</h4>
                    <ul>
                        <li><a asp-controller="Pages" asp-action="About">О нас</a></li>  
                        <li><a asp-controller="Pages" asp-action="FAQ">FAQ</a></li>
                    </ul>
                </div>

                <div class="footer-links col-md-3">
                    <h4>Поддержка</h4>
                    <ul> 
                        <li>Telegram : @@evgeny_vasilkov6</li>
                        <li>Контактный телефон : +375-29-848-37-98</li>
                    </ul>
                </div> 
            </div> 
        </div>

        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year BRUCrypto. Все права защищены.</p>
        </div>
    </footer> 
</body>
</html>
